extends layout/base

append vars
    - title = 'Dashboard'
block content
    .row.row-cards.row.desk
        .col-sm-6.col-lg-12
            .card
                .card-header
                    h4.card-title Browser Stats
                table.table.card-table
                    tr
                        td(width="1")
                            i.fa.fa-chrome.text-muted
                        td Google Chrome
                        td.text-right
                            span.text-muted 23%
                    tr
                        td
                            i.fa.fa-firefox.text-muted
                        td Mozila Firefox
                        td.text-right
                            span.text-muted 15%
                    tr
                        td
                            i.fa.fa-safari.text-muted
                        td Apple Safari
                        td.text-right
                            span.text-muted 7%
                    tr
                        td
                            i.fa.fa-internet-explorer.text-muted
                        td Internet Explorer
                        td.text-right
                            span.text-muted 9%
                    tr
                        td
                            i.fa.fa-opera.text-muted
                        td Opera mini
                        td.text-right
                            span.text-muted 23%
                    tr
                        td
                            i.fa.fa-edge.text-muted
                        td Microsoft edge
                        td.text-right
                            span.text-muted 9%
        .col-md-6.col-lg-12
            .row
                .col-sm-6.col-lg-3
                    .card
                        .card-body
                            .card-value.float-right.text-blue +5%
                            h3.mb-1 423
                            .text-muted Users online
                        .card-chart-bg
                            #chart-bg-users-1(style="height: 100%")
                    script.
                        require(['c3', 'jquery'], function (c3, $) {
                            $(document).ready(function() {
                                var chart = c3.generate({
                                    bindto: '#chart-bg-users-1',
                                    padding: {
                                        bottom: -10,
                                        left: -1,
                                        right: -1
                                    },
                                    data: {
                                        names: {
                                            data1: 'Users online'
                                        },
                                        columns: [
                                            ['data1', 30, 40, 10, 40, 12, 22, 40]
                                        ],
                                        type: 'area'
                                    },
                                    legend: {
                                        show: false
                                    },
                                    transition: {
                                        duration: 0
                                    },
                                    point: {
                                        show: false
                                    },
                                    tooltip: {
                                        format: {
                                            title: function (x) {
                                                return '';
                                            }
                                        }
                                    },
                                    axis: {
                                        y: {
                                            padding: {
                                                bottom: 0,
                                            },
                                            show: false,
                                            tick: {
                                                outer: false
                                            }
                                        },
                                        x: {
                                            padding: {
                                                left: 0,
                                                right: 0
                                            },
                                            show: false
                                        }
                                    },
                                    color: {
                                        pattern: ['#467fcf']
                                    }
                                });
