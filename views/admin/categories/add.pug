extends ../layout/base

append vars
    - title = 'New Category'
block content
    .row
        .col-md-8.offset-md-2
            form#addCategory.card(action="/admin/posts/add", method="post")
                .card-header
                    h3.card-title #{title}
                .card-body
                    .row
                        .col-12
                            .form-group
                                label.form-label
                                    | Title
                                    span.form-required *
                                input.form-control(type="text", name="title")
                                .invalid-feedback
                .card-footer.text-right
                    button.btn.btn-primary(type="submit") Save