extends ../layout/base

append vars
    - title = 'Edit Tag'
block content
    .row
        .col-md-8.offset-md-2
            form#editTag.card(action="/admin/posts/edit", method="put")
                .card-header
                    h3.card-title #{title}
                .card-body
                    .row
                        .col-12
                            .form-group
                                label.form-label
                                    | Title
                                    span.form-required *
                                input.form-control(type="text", name="title", value=tag.title)
                                .invalid-feedback
                            .form-group
                                label.form-label
                                    | Categories
                                    span.form-required *
                                select.custom-select.form-control(name="category", data-active=tag.category)
                                    each category, index in categories
                                        - if (tag.category == category._id.toString()){
                                            option(value=category._id, selected="") #{category.title}
                                        - }else{
                                            option(value=category._id) #{category.title}
                                        - }
                .card-footer.text-right
                    input(type="hidden" name="id" value=tag._id)
                    button.btn.btn-primary(type="submit") Update